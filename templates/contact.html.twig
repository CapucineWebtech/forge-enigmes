{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('connexion') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('connexion') }}
{% endblock %}

{% block body %}
    {{ component('navBarComponent', { userName: userName }) }}
    <div class="fe-form-container-container">
        {% for message in app.flashes('successContact') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="fe-form-container fe-form-big-container">
            <h1 class="text-center">Contactez-nous</h1>
            {{ form_start(form) }}
            <div class="form-group mb-2">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
            </div>
            <div class="form-group mb-2">
                {{ form_label(form.message, 'Message') }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control form-textarea'}}) }}
            </div>
            <div class="mt-3 d-flex">
                <a class="btn btn-warning mr-auto" href="{{ url('app_index') }}">Revenir Ã  l'accueil</a>
                <button type="submit" class="btn btn-info">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {{ component('footerComponent') }}
{% endblock %}
