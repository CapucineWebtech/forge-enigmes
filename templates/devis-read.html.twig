{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ component('navBarComponent') }}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 col-12">
                <h4>Nom du demandeur</h4>
                <p>{{ devis.userName }}</p>
            </div>
            <div class="col-md-6 col-12">
                <h4>Email du demandeur</h4>
                <p>{{ devis.email }}</p>
            </div>
            <div class="col-md-6 col-12">
                <h4>Date de la demande</h4>
                <p>{{ devis.date.format('d/m/Y') }}</p>
            </div>
            <div class="col-md-6 col-12">
                <h4>Budget</h4>
                <p>{{ devis.budget }}</p>
            </div>
            <div class="col-12">
                <h4>Entreprise : objet</h4>
                <p>{{ devis.entrepriseName }} : {{ devis.devisName }}</p>
            </div>
            <div class="col-12">
                <p class="fe-devis-container">{{ devis.explication }}</p>
            </div>
        </div>
        <form action="{{ url('app_deleteDevis', { id: devis.id }) }}" method="post">
            <input type="hidden" name="token" value="{{ csrf_token('delete-devis'~devis.id) }}"/>
            <button type="submit" class="btn btn-danger">Supprimer le devis</button>
        </form>
    </div>
    {{ component('footerComponent') }}
{% endblock %}
