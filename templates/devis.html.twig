{% extends 'base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('connexion') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('connexion') }}
{% endblock %}

{% block body %}
    {{ component('navBarComponent') }}
    <div class="fe-form-container-container">
        {% for message in app.flashes('successDevis') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="fe-form-container fe-form-big-container">
            <h1 class="text-center">Faire un devis</h1>
            {{ form_start(form) }}
            <div class="row">
                <div class="form-group mb-2 col-md-6 col-12">
                    {{ form_label(form.userName, 'Votre nom') }}
                    {{ form_widget(form.userName, {'attr': {'class': 'form-control form-textarea'}}) }}
                </div>
                <div class="form-group mb-2 col-md-6 col-12">
                    {{ form_label(form.email, 'Votre email') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
                </div>
                <div class="form-group mb-2 col-md-6 col-12">
                    {{ form_label(form.entrepriseName, 'Nom de votre entreprise') }}
                    {{ form_widget(form.entrepriseName, {'attr': {'class': 'form-control form-textarea'}}) }}
                </div>
                <div class="form-group mb-2 col-md-6 col-12">
                    {{ form_label(form.budget, 'Votre budget') }}
                    {{ form_widget(form.budget, {'attr': {'class': 'form-control form-textarea'}}) }}
                </div>
                <div class="form-group mb-2 col-12">
                    {{ form_label(form.devisName, 'Objet de la demande') }}
                    {{ form_widget(form.devisName, {'attr': {'class': 'form-control form-textarea'}}) }}
                </div>
                <div class="form-group mb-2 col-12">
                    {{ form_label(form.explication, 'Demande') }}
                    {{ form_widget(form.explication, {'attr': {'class': 'form-control form-textarea', 'style': 'height: 230px;'}}) }}
                </div>
            </div>
            <div class="mt-3 d-flex">
                <button type="submit" class="btn btn-info m-auto btn-lg">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {{ component('footerComponent') }}
{% endblock %}
