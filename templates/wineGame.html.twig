{% extends "base.html.twig" %}

{% block title %}Wine Game{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('wineGame') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('wineGame') }}
{% endblock %}

{% block body %}
    {{ component('navBarComponent') }}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.wineGameName, 'Nom de la machine') }}
                {{ form_widget(form.wineGameName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.wineGameName) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                <div class="form-check form-switch mt-0 mt-md-4">
                    {{ form_label(form.padlockIsOpen, 'Cadenas ouvert ?') }}
                    {{ form_widget(form.padlockIsOpen, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_errors(form.padlockIsOpen) }}
                </div>
            </div>
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.music, 'Musique') }}
                {{ form_widget(form.music, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.music) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.temperature, 'Température') }}
                {{ form_widget(form.temperature, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.temperature) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.bottleCode, 'Code de la bouteille') }}
                {{ form_widget(form.bottleCode, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.bottleCode) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.userCodeName, "Titre du champs code sur l'application") }}
                {{ form_widget(form.userCodeName, {'attr': {'class': 'form-control', 'style': 'height: 37.6px;'}}) }}
                {{ form_errors(form.userCodeName) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.userCode, "Code à rentrer pour l'utilisateur") }}
                {{ form_widget(form.userCode, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.userCode) }}
            </div>
            <div class="col-12 col-md-6 mb-3">
                {{ form_label(form.adminCode, "Code à rentrer pour l'administateur") }}
                {{ form_widget(form.adminCode, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adminCode) }}
            </div>
            <div class="col-12 mb-3">
                {{ form_label(form.hint, "Indice") }}
                {{ form_widget(form.hint, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.hint) }}
            </div>
            <div class="col-12 mt-3 mb-3">
                <a class="btn btn-dark" href="{{ url('app_activateBottle', { id: wineGame.id }) }}">Activer la bouteille</a>
                <button type="submit" class="btn btn-info">Enregistrer les modifications</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    {{ component('footerComponent') }}
{% endblock %}