{% extends 'base.html.twig' %}

{% block title %}Création d'utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('connexion') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('connexion') }}
{% endblock %}

{% block body %}
    {{ component('navBarComponent') }}
    <div class="fe-form-container-container">
        <div class="fe-form-container">
            <h1 class="h3 mb-3 font-weight-normal text-center">Création d'utilisateur</h1>
            {{ form_start(registrationForm) }}
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-3'}}) }}

                {{ form_label(registrationForm.roles, "Type d'utilisateur") }}
                {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control mb-3'}}) }}

                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-3'}}) }}

                <div class="mt-3 d-flex">
                    <button type="submit" class="btn btn-info m-auto">Créer</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
